{
  "include": ["src", "tests"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "types": ["svelte", "vite/client"],
    "sourceMap": true,
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "noEmit": true
}
